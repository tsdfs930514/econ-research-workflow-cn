{
  "permissions": {
    "allow": [
      "Bash(bash *run-stata.sh *)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/session-loader.py\"",
            "timeout": 10
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Before context compaction, append a brief session summary to MEMORY.md under the Session Log section. Format: `| YYYY-MM-DD | summary |`. Include key decisions, issues found, and current quality score if known."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python \"$CLAUDE_PROJECT_DIR/.claude/hooks/stata-log-check.py\"",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
